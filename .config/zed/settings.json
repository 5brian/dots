// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  // 1 - assistant
  "agent": {
    "always_allow_tool_actions": false,
    "default_profile": "write",
    "profiles": {
      "write": {
        "name": "Write",
        "tools": {
          "contents": true,
          "rename": true,
          "code_actions": true,
          "open": true,
          "terminal": true,
          "batch_tool": true,
          "code_symbols": true,
          "copy_path": true,
          "create_file": true,
          "delete_path": true,
          "diagnostics": true,
          "edit_file": true,
          "edit_files": true,
          "fetch": true,
          "list_directory": true,
          "move_path": true,
          "now": true,
          "find_path": true,
          "read_file": true,
          "grep": true,
          "symbol_info": true,
          "thinking": true,
          "create_directory": true
        },
        "enable_all_context_servers": true,
        "context_servers": {}
      }
    },
    "dock": "left",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3.7-sonnet"
    },
    "version": "2"
  },
  "features": {
    "edit_prediction_provider": "zed"
  },

  // 2 - appearance
  "buffer_font_size": 14,
  "buffer_line_height": {
    "custom": 1.5
  },
  "relative_line_numbers": true,
  "vertical_scroll_margin": 10,
  "soft_wrap": "editor_width",
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Light"
  },
  "experimental.theme_overrides": {
    "editor.active_line_number": "#74ade8ff",
    "syntax": {
      "variable.special": {
        "font_style": "italic"
      },
      "comment": {
        "font_style": "italic"
      },
      "comment.doc": {
        "font_style": "italic"
      }
    }
  },
  "icon_theme": "Catppuccin Frapp√©",
  "tabs": {
    "git_status": true,
    "file_icons": true,
    "show_diagnostics": "all"
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "inlay_hints": {
    "show_background": true,
    "toggle_on_modifiers_press": {
      "control": true,
      "alt": true
    }
  },
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },
  "project_panel": {
    "default_width": 280,
    "dock": "right"
  },
  "terminal": {
    "line_height": "standard",
    "toolbar": {
      "breadcrumbs": false
    }
  },

  // 3 - functionality
  "vim_mode": true,
  "use_system_path_prompts": false,
  "restore_on_startup": "none",
  "when_closing_with_no_tabs": "keep_window_open",
  "edit_predictions": {
    "mode": "subtle"
  },
  "command_aliases": {
    "cw": "workspace::CloseWindow",
    "cd": "workspace::CloseAllDocks",
    "ci": "pane::CloseAllItems",
    "t": "workspace::NewCenterTerminal",
    "r": "task::Spawn",
    "rr": "task::Rerun",
    "gl": "git::Pull",
    "gp": "git::Push",
    "gpf": "git::ForcePush",
    "gc": "git::Commit",
    "gd": "git::Diff"
  },
  "vim": {
    "use_multiline_find": true,
    "use_smartcase_find": true,
    "toggle_relative_line_numbers": true
  }
}
