// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  // 1 - assistant
  "assistant": {
    "dock": "left",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3.7-sonnet-thought"
    },
    "version": "2"
  },
  "features": {
    "edit_prediction_provider": "zed"
  },

  // 2 - appearance
  // "ui_font_size": 16,
  // "ui_font_family": "Zed Plex Mono",
  // "buffer_font_size": 16,
  // "buffer_font_family": "Zed Plex Mono",
  "buffer_line_height": {
    "custom": 1.45
  },
  "relative_line_numbers": true,
  "vertical_scroll_margin": 10,
  "soft_wrap": "editor_width",
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Light"
  },
  "experimental.theme_overrides": {
    "syntax": {
      "variable.special": {
        "font_style": "italic"
      },
      "comment": {
        "font_style": "italic"
      },
      "comment.doc": {
        "font_style": "italic"
      }
    }
  },
  "icon_theme": "Catppuccin Frapp√©",
  "tabs": {
    "git_status": true,
    "file_icons": true,
    "show_diagnostics": "all"
  },
  "tab_bar": {
    "show": false
  },
  "inlay_hints": {
    "toggle_on_modifiers_press": {
      "alt": true
    }
  },
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },
  "project_panel": {
    "default_width": 280,
    "dock": "right"
  },
  "terminal": {
    "line_height": "standard"
  },

  // 3 - functionality
  "vim_mode": true,
  "use_system_path_prompts": false,
  "restore_on_startup": "none",
  "when_closing_with_no_tabs": "keep_window_open",
  "edit_predictions": {
    "mode": "subtle"
  },
  "command_aliases": {
    "cw": "workspace::CloseWindow",
    "cd": "workspace::CloseAllDocks",
    "ci": "pane::CloseAllItems",
    "t": "workspace::NewCenterTerminal",
    "r": "task::Spawn",
    "rr": "task::Rerun",
    "gl": "git::Pull",
    "gp": "git::Push",
    "gpf": "git::ForcePush",
    "gc": "git::Commit",
    "gd": "git::Diff"
  }
}
